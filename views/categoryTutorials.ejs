<!doctype html>
<html lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Favicon -->
    <link rel="shortcut icon" href="/favicon.png">

    <!-- Font -->
    <link href="https://fonts.googleapis.com/css2?family=Jost:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&family=Lora:wght@400;700&family=Montserrat:wght@400;500;600;700&family=Nunito:wght@400;700&display=swap" rel="stylesheet">

    <!-- Libs CSS -->
    <link rel="stylesheet" href="/fonts/fontawesome/fontawesome.css">
    <link rel="stylesheet" href="/libs/@fancyapps/fancybox/dist/jquery.fancybox.min.css">
    <link rel="stylesheet" href="/libs/aos/dist/aos.css">
    <link rel="stylesheet" href="/libs/choices.js/public/assets/styles/choices.min.css">
    <link rel="stylesheet" href="/libs/flickity-fade/flickity-fade.css">
    <link rel="stylesheet" href="/libs/flickity/dist/flickity.min.css">
    <link rel="stylesheet" href="/libs/highlightjs/styles/vs2015.css">
    <link rel="stylesheet" href="/libs/jarallax/dist/jarallax.css">
    <link rel="stylesheet" href="/libs/quill/dist/quill.core.css" />

    <!-- Map -->
    <link href='https://api.mapbox.com/mapbox-gl-js/v0.53.0/mapbox-gl.css' rel='stylesheet' />

    <!-- Theme CSS -->
    <link rel="stylesheet" href="/css/theme.min.css">

    <title>Tutorials<% if(category){ %> - <%= category.title %><% } %></title>

</head>
<body>

    <!-- NAVBAR
    ================================================== -->
    <%- include('partials/header', { categories: categories }) %>

    <!-- PAGE TITLE
    ================================================== -->
    <header class="bg-dark py-2 py-lg-3 position-relative mb-2" style="background-image: none;">
        <div class="container text-center py-xl-3">
            <h1 class="display-4 text-orange fw-semi-bold mb-0"><%= category.title %> Tutorials</h1>
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb breadcrumb-scroll justify-content-center">
                    <li class="breadcrumb-item">
                        <a class="text-white" href="#">
                            Home
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a class="text-white" href="#">
                            Tutorials
                        </a>
                    </li>
                    <li class="breadcrumb-item text-white active" aria-current="page">
                        <%= category.title %> Tutorials
                    </li>
                </ol>
            </nav>
        </div>
    </header>

    <!-- CONTROL BAR
    ================================================== -->
    <div class="container mb-6 mt-6 mb-xl-8 z-index-2">
        <div class="d-lg-flex align-items-center mb-6 mb-xl-0">
            <p class="mb-lg-0">Category  <span class="text-dark"><%= category.title %></span></p>
            <div class="ms-lg-auto d-lg-flex flex-wrap">
                <div class="mb-4 mb-lg-0 ms-lg-6">
                    <div class="border rounded d-flex align-items-center choices-label h-50p">
                        <span class="ps-5">Sort by:</span>
                        <select class="form-select form-select-sm text-dark border-0 ps-1 bg-transparent flex-grow-1 shadow-none dropdown-menu-end" data-choices>
                            <option>Default</option>
                            <option>New Tutorials</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- COURSE
    ================================================== -->
    <div class="container">
        <div class="row">
            
            <div class="col-xl-9">
                <div class="row row-cols-md-2 row-cols-lg-3 mb-3 ">
                    <% tutorials.forEach(tutorial => { %>
                        <div class="col-md pb-4 pb-md-7">
                            <!-- Card -->
                            <div class="card border shadow p-2 lift sk-fade">
                                <!-- Image -->
                                <div class="card-zoom position-relative">
                                    <a href="/tutorials/<%= tutorial.name %>" class="card-img sk-thumbnail img-ratio-3 d-block">
                                        <img class="rounded shadow-light-lg" src="<%= tutorial.image %>" alt="<%= tutorial.title %>">
                                    </a>
                                </div>

                                <!-- Footer -->
                                <div class="card-footer px-2 pb-2 mb-1 pt-4 position-relative">
                                    <!-- Preheading -->
                                    <a href="/tutorials/topic/<%= tutorial.topic %>"><span class="mb-1 d-inline-block text-gray-800"><%= topicsInCategory.find(topic => topic.name === tutorial.topic).title %></span></a>

                                    <!-- Heading -->
                                    <div class="position-relative">
                                        <a href="/tutorials/<%= tutorial.name %>" class="d-block stretched-link"><h5 class="line-clamp-2 h-md-48 h-lg-58 me-md-8 me-lg-10 me-xl-4 mb-2"><%= tutorial.title %></h5></a>

                                        <div class="row mx-n2 align-items-end">
                                            <div class="col px-2">
                                                <ul class="nav mx-n3">
                                                    <li class="nav-item px-3">
                                                        <div class="d-flex align-items-center">
                                                            <div class="me-2 d-flex text-secondary icon-uxs">
                                                                <!-- Icon -->
                                                                <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
                                                                    <path d="M17.1947 7.06802L14.6315 7.9985C14.2476 7.31186 13.712 6.71921 13.0544 6.25992C12.8525 6.11877 12.6421 5.99365 12.4252 5.88303C13.0586 5.25955 13.452 4.39255 13.452 3.43521C13.452 1.54098 11.9124 -1.90735e-06 10.0197 -1.90735e-06C8.12714 -1.90735e-06 6.58738 1.54098 6.58738 3.43521C6.58738 4.39255 6.98075 5.25955 7.61414 5.88303C7.39731 5.99365 7.1869 6.11877 6.98502 6.25992C6.32752 6.71921 5.79178 7.31186 5.40787 7.9985L2.8447 7.06802C2.33612 6.88339 1.79688 7.26044 1.79688 7.80243V16.5178C1.79688 16.8465 2.00256 17.14 2.31155 17.2522L9.75312 19.9536C9.93073 20.018 10.1227 20.0128 10.2863 19.9536L17.7278 17.2522C18.0368 17.14 18.2425 16.8465 18.2425 16.5178V7.80243C18.2425 7.26135 17.704 6.88309 17.1947 7.06802ZM10.0197 1.5625C11.0507 1.5625 11.8895 2.40265 11.8895 3.43521C11.8895 4.46777 11.0507 5.30792 10.0197 5.30792C8.98866 5.30792 8.14988 4.46777 8.14988 3.43521C8.14988 2.40265 8.98866 1.5625 10.0197 1.5625ZM9.23844 18.1044L3.35938 15.9703V8.91724L9.23844 11.0513V18.1044ZM10.0197 9.67255L6.90644 8.54248C7.58164 7.51892 8.75184 6.87042 10.0197 6.87042C11.2875 6.87042 12.4577 7.51892 13.1329 8.54248L10.0197 9.67255ZM16.68 15.9703L10.8009 18.1044V11.0513L16.68 8.91724V15.9703Z" fill="currentColor"/>
                                                                </svg>

                                                            </div>
                                                            <div class="font-size-sm"><%= tutorial.description %> </div>
                                                        </div>
                                                    </li>
                                                </ul>
                                            </div>

                                            <!-- <div class="col-auto px-2 text-right">
                                                <div class="star-rating mb-2 mb-lg-0">
                                                    <div class="rating" style="width:100%;"></div>
                                                </div>
                                            </div> -->
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                </div>

                <!-- PAGINATION
                ================================================== -->
                <nav class="mb-11" aria-label="Page navigationa">
                    <ul class="pagination justify-content-center">
                        <% if (currentPage > 1) { %>
                            <li class="page-item">
                                <a class="page-link" href="/tutorials/category/<%= category.name %>?page=<%= currentPage - 1 %>&limit=<%= tutorials.length %>" aria-label="Previous">
                                    <span aria-hidden="true"><i class="fas fa-arrow-left"></i></span>
                                </a>
                            </li>
                        <% } %>
                    
                        <% if (currentPage > 3) { %>
                            <li class="page-item">
                                <a class="page-link" href="/tutorials/category/<%= category.name %>?page=1&limit=<%= tutorials.length %>">1</a>
                            </li>
                            <li class="page-item disabled"><a class="page-link">...</a></li>
                        <% } %>
                    
                        <% for(let i = currentPage - 2; i <= currentPage + 2; i++) { %>
                            <% if (i > 0 && i <= totalPages) { %>
                                <li class="page-item">
                                    <a class="page-link" href="/tutorials/category/<%= category.name %>?page=<%= i %>&limit=<%= tutorials.length %>"><%= i %></a>
                                </li>
                            <% } %>
                        <% } %>
                    
                        <% if (currentPage < totalPages - 2) { %>
                            <li class="page-item disabled"><a class="page-link">...</a></li>
                            <li class="page-item">
                                <a class="page-link" href="/tutorials/category/<%= category.name %>?page=<%= totalPages %>&limit=<%= tutorials.length %>"><%= totalPages %></a>
                            </li>
                        <% } %>
                    
                        <% if (currentPage < totalPages) { %>
                            <li class="page-item">
                                <a class="page-link" href="/tutorials/category/<%= category.name %>?page=<%= currentPage + 1 %>&limit=<%= tutorials.length %>" aria-label="Next">
                                    <span aria-hidden="true"><i class="fas fa-arrow-right"></i></span>
                                </a>
                            </li>
                        <% } %>
                    </ul>
                </nav>

            </div>

            <div class="col-xl-3 mb-5 mb-xl-0">
                <!-- SIDEBAR FILTER
                ================================================== -->
                <div  class="border rounded mb-6 bg-white">
                    <!-- Heading -->
                    <div class="bg-dark text-center"><h4 class="mb-0 py-2 text-white"><%= category.title %></h4></div>

                    <div class="border-top mb-6 p-3 py-md-3 ps-md-6 pe-md-4">
                        <div class="nav flex-column nav-vertical">
                            <% topicsInCategory.forEach(topic => { %>
                                <a href="/tutorials/topic/<%= topic.name %>" class="nav-link py-2"><%= topic.title %></a>
                            <% }) %>
                        </div>
                    </div>
                </div>
                <div  class="border rounded mb-6 bg-white">
                    <!-- Heading -->
                    <div class="bg-dark text-center"><h4 class="mb-0 py-2 text-white">Level</h4></div>

                    <div class="border-top mb-6 p-3 py-md-3 ps-md-6 pe-md-4">
                        <div class="nav flex-column nav-vertical">
                            <a href="./blog-grid-v2.html" class="nav-link py-2">Beginner</a>
                            <a href="./blog-grid-v2.html" class="nav-link py-2">Intermediate</a>
                            <a href="./blog-grid-v2.html" class="nav-link py-2">Advanced</a>
                        </div>
                    </div>
                </div>

            </div>

        </div>
    </div>

    <!-- FOOTER
    ================================================== -->
    <%- include('partials/footer', { }) %>

    <!-- JAVASCRIPT
    ================================================== -->
    <!-- Libs JS -->
    <script src="/libs/jquery/dist/jquery.min.js"></script>
    <script src="/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/libs/@fancyapps/fancybox/dist/jquery.fancybox.min.js"></script>
    <script src="/libs/aos/dist/aos.js"></script>
    <script src="/libs/choices.js/public/assets/scripts/choices.min.js"></script>
    <script src="/libs/countup.js/dist/countUp.min.js"></script>
    <script src="/libs/dropzone/dist/min/dropzone.min.js"></script>
    <script src="/libs/flickity/dist/flickity.pkgd.min.js"></script>
    <script src="/libs/flickity-fade/flickity-fade.js"></script>
    <script src="/libs/highlightjs/highlight.pack.min.js"></script>
    <script src="/libs/imagesloaded/imagesloaded.pkgd.min.js"></script>
    <script src="/libs/isotope-layout/dist/isotope.pkgd.min.js"></script>
    <script src="/libs/jarallax/dist/jarallax.min.js"></script>
    <script src="/libs/jarallax/dist/jarallax-video.min.js"></script>
    <script src="/libs/jarallax/dist/jarallax-element.min.js"></script>
    <script src="/libs/parallax-js/dist/parallax.min.js"></script>
    <script src="/libs/quill/dist/quill.min.js"></script>
    <script src="/libs/smooth-scroll/dist/smooth-scroll.min.js"></script>
    <script src="/libs/typed.js/lib/typed.min.js"></script>

    <!-- Map -->
    <script src='https://api.mapbox.com/mapbox-gl-js/v0.53.0/mapbox-gl.js'></script>

    <!-- Theme JS -->
    <script src="/js/theme.min.js"></script>

</body>
</html>
